<% layout('layouts/manager') -%>

    <main>
        <div class="jumbotron jumbotron-fluid">
            <div class="container text-center">
                <h1 class="display-4">Products</h1>
                <p class="lead">Here you can manage the concepts Source Inc.</p>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="row d-flex justify-content-between">
                        <div class="col-md-4 my-3">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <label class="input-group-text" for="filter">Filter</label>
                                </div>
                                <select class="custom-select" id="filter">
                                    <option selected>None</option>
                                    <option value="all">View ALL</option>
                                    <option value="apparel">Apparel</option>
                                    <option value="accessories">Accessories</option>
                                    <option value="handbag">Handbag</option>
                                    <option value="home">Home</option>
                                    <option value="jewellery">Jewellery</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-4 d-flex justify-content-center my-3">
                            <form id="search-form" class="input-group mb-3">
                                <input type="text" id='search-box' name="q" class="form-control" placeholder="Style No"
                                    aria-label="Recipient's username" aria-describedby="basic-addon2">
                                <div class="input-group-append">
                                    <button class="btn btn-outline-success" id="basic-addon2"><i
                                            class="fas fa-search"></i></button>
                                </div>
                            </form>
                        </div>
                        <div class="col-md-4 my-3">
                            <a href="/manage/product/new" type="button" class="btn btn-success btn-block">Add
                                Product</a>
                        </div>
                    </div>
                    <hr class="my-5 ">
                </div>
                <div id="root" class="row">

                </div>
            </div>
        </div>
    </main>